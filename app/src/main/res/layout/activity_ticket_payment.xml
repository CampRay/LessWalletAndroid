<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--头部菜单-->
    <include layout="@layout/include_menu"
        android:id="@+id/home_layout_menu"/>


    <!--Coupon的样式布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_layout_menu"
        android:animateLayoutChanges="true"
        android:background="#e2e2e1"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="14dp"
        android:paddingTop="20dp">

        <!--Coupon列表对象的样式布局-->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rl_ticket_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fadingEdge="horizontal|vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <!--上部主体部分-->
                <LinearLayout
                    android:id="@+id/ll_top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/shape_ticket_top_radius"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_coupon_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.7"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/poster" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:text="Lady Gaga:"
                                android:textColor="#ffffff"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/ll_bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:gravity="bottom"
                                android:text="Date"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:gravity="bottom"
                                android:text="Time"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="85dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/btn_login_selector"
                                android:text="Select Date"
                                android:textAlignment="center"
                                android:textColor="#ffffff"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_login_selector"
                                android:text="Select Time"
                                android:textAlignment="center"
                                android:textColor="#ffffff"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginRight="7dp">

                    <com.campray.lesswalletandroid.view.InnerCornerView
                        android:id="@+id/icv_tleft"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentLeft="true"
                        app:Angle="270"
                        app:CornerColor="#223d22"
                        app:Radius="10dp" />

                    <TextView
                        android:id="@+id/tv_top_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/icv_tright"
                        android:layout_toRightOf="@+id/icv_tleft"
                        android:background="#223d22" />

                    <com.campray.lesswalletandroid.view.InnerCornerView
                        android:id="@+id/icv_tright"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_ticket_circle_shadow"
                        app:Angle="180"
                        app:CornerColor="#223d22"
                        app:Radius="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginRight="7dp">

                    <com.campray.lesswalletandroid.view.InnerCornerView
                        android:id="@+id/icv_bleft"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentLeft="true"
                        app:Angle="0"
                        app:CornerColor="#ededed"
                        app:Radius="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/icv_bright"
                        android:layout_toRightOf="@+id/icv_bleft"
                        android:background="#ededed" />

                    <com.campray.lesswalletandroid.view.InnerCornerView
                        android:id="@+id/icv_bright"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_ticket_circle_down_shadow"
                        app:Angle="90"
                        app:CornerColor="#ededed"
                        app:Radius="10dp" />
                </RelativeLayout>

                <!--底部信息部分-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_ticket__buttom_radius"
                    android:orientation="vertical">
                    <!--描述部分-->
                    <LinearLayout
                        android:id="@+id/ll_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_coupon_top"
                            android:layout_gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Description"
                            android:textColor="#313131"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_coupon_top"
                            android:layout_gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Madison Square Garden"
                            android:textColor="#313131"
                            android:textSize="12sp" />
                        <!---座位号-->
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:columnCount="3"
                            android:padding="20dp"
                            android:rowCount="3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_gravity="left|center_vertical"
                                android:layout_row="0"
                                android:text="Seat"
                                android:textColor="#313131"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="left|center_vertical"
                                android:layout_row="0"
                                android:text="Row"
                                android:textColor="#313131"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_columnWeight="1"
                                android:layout_gravity="left|center_vertical"
                                android:layout_row="0"
                                android:text="Section"
                                android:textColor="#313131"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_seat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="5dp"
                                android:layout_row="1"
                                android:background="@drawable/btn_login_selector"
                                android:drawablePadding="6dp"
                                android:gravity="bottom"
                                android:text="Select Seat"
                                android:textColor="#313131"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_row"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_columnWeight="1"
                                android:layout_marginRight="5dp"
                                android:layout_row="1"
                                android:background="@drawable/btn_login_selector"
                                android:text="Select Row"
                                android:textColor="#313131"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_section"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_columnWeight="1"
                                android:layout_row="1"
                                android:background="@drawable/btn_login_selector"
                                android:text="Select Section"
                                android:textColor="#313131"
                                android:textSize="12sp" />

                        </GridLayout>
                    </LinearLayout>

                    <GridLayout
                        android:id="@+id/gl_coupon_info"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:columnCount="2"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:rowCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_columnWeight="3.5"
                            android:layout_gravity="left|center_vertical"
                            android:layout_row="0"
                            android:text="Name"
                            android:textColor="#313131"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_love"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="right|center_vertical"
                            android:layout_row="0"
                            android:adjustViewBounds="true"
                            android:textColor="#313131"
                            android:textStyle="bold"
                            tools:text="Purchase Price:" />


                        <EditText
                            android:id="@+id/tv_username"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_column="0"
                            android:layout_columnWeight="3.5"
                            android:layout_gravity="bottom"
                            android:layout_row="1"
                            android:background="@android:color/background_light"
                            android:gravity="bottom"
                            android:hint="Please input ticket owner."
                            android:padding="0dp"
                            android:textColor="#313131"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="bottom"
                            android:layout_row="1"
                            android:gravity="bottom|right"
                            android:text="0"
                            android:textColor="@color/colorAccent" />

                    </GridLayout>
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <!--确认对话框-->
        <GridLayout
            android:id="@+id/gl_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_box_shadow"
            android:columnCount="2"
            android:rowCount="2"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_dialog_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:gravity="center"
                android:padding="10dp"
                android:text="Are you sure to receive this coupon?"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:background="@drawable/shape_button_radius"
                android:gravity="center"
                android:text="YES"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btn_no"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:background="@drawable/shape_button_radius_blue"
                android:gravity="center"
                android:text="NO"
                android:textAlignment="gravity"
                android:textSize="18sp" />
        </GridLayout>
    </LinearLayout>

</RelativeLayout>
